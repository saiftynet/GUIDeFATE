%__make
%__rm -rf $RPM_BUILD_ROOT
%__make install SITEPREFIX=/usr DESTDIR=$RPM_BUILD_ROOT

%__rm -f $RPM_BUILD_ROOT/%{perl_archlib}/perllocal.pod
%__rm -f $RPM_BUILD_ROOT/%{perl_vendorarch}/auto/GUIDeFATE/.packlist

